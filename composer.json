{
    "name": "wmde/fundraising-banners-server",
    "description": "WMDE fundraising banner-serving application",
    "type": "project",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",

        "symfony/framework-bundle": "^6.0",
        "symfony/console": "^6.0",
        "symfony/flex": "^2.1",
        "symfony/yaml": "^6.0",
        "symfony/asset": "^6.0",

        "psr/log": "~3.0",
        "monolog/monolog": "~3.0"
    },
    "require-dev": {
        "phpmd/phpmd": "~2.6",
        "phpstan/phpstan": "^1.3",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "~10.5.9",
        "symfony/dotenv": "~6.0",
        "symfony/phpunit-bridge": "^6.0",
        "wmde/fundraising-phpcs": "~9.0"
    },
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/wmde/fundraising-phpcs",
			"no-api": true
		}
	],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "autoload": {
        "psr-4": {
            "WMDE\\BannerServer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WMDE\\BannerServer\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^6.0"
        }
    }
}
