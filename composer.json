{
    "name": "wmde/fundraising-banners-server",
    "description": "WMDE fundraising banner-serving application",
    "type": "project",
    "license": "GPL-2.0+",
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",

        "symfony/framework-bundle": "^4.4",
        "symfony/console": "^4.4",
        "symfony/flex": "^1.1",
        "symfony/yaml": "^4.4",
        "symfony/asset": "^4.4",

        "psr/log": "~1.0",
        "monolog/monolog": "~1.24"
    },
    "require-dev": {
        "jeroen/nyancat-phpunit-resultprinter": "~2.2",
        "ockcyp/covers-validator": "~1.0",
        "phpmd/phpmd": "~2.6",
        "phpstan/phpstan": "^0.12.5",
        "phpstan/phpstan-phpunit": "^0.12.5",
        "slevomat/coding-standard": "^6.2",
        "squizlabs/php_codesniffer": "~3.3",
        "symfony/dotenv": "*",
        "symfony/test-pack": "^1.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "WMDE\\BannerServer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WMDE\\BannerServer\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^4.4"
        }
    }
}
